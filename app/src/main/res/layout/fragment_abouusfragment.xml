<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.abouusfragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

<ImageView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:src="@drawable/aboutus"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:textSize="16sp"
        android:text="Corona Crux provide you with latest info. of any district and also provide you all news related to CORONA .Data is fetched through API."
        android:layout_marginTop="110dp"
        android:textColor="@color/_95_892_color"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:textSize="16sp"
            android:textColor="@color/_13_598_color"
            android:text="App Developer:-"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/kd"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:layout_marginLeft="10dp"
                android:textColor="@color/_206_577_color"
                android:text="Kuldeeep Meena"

                />
        <TextView
            android:id="@+id/kuldeep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:layout_marginLeft="10dp"
            android:textColor="@color/_206_577_color"
            android:text="LinkedIn:- https://www.linkedin.com/in/kuldeep-meena-26b1a6191/"
            android:autoLink="all"
            android:clickable="true"
            />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:textColor="@color/_13_598_color"
            android:text="\nSpecial Thanks To:-" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/kraj"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/_206_577_color"
                    android:text="Krishan Raj Borana"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/kraj"
                    android:text="LinkedIn:- linkedin.com/in/kraj0291"
                    android:autoLink="all"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/_206_577_color"
                    android:fontFamily="@font/allerta"
                    android:clickable="true"

                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/ashok"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/_206_577_color"
                    android:text="Ashok Chouhan">

                </TextView>
                <TextView
                    android:id="@+id/ashok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/_206_577_color"
                    android:fontFamily="@font/allerta"
                    android:text="LinkedIn:- linkedin.com/in/ashok-chouhan-3473b9165"
                    android:autoLink="all"
                    android:clickable="true"

                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/appy"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/_206_577_color"
                    android:text="Apoorva Panwar">

                </TextView>

                <TextView
                    android:id="@+id/appy"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/allerta"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/_206_577_color"
                    android:layout_height="wrap_content"
                    android:text="LinkedIn:- linkedin.com/in/apoorva-panwar-7baa76184"
                    android:autoLink="all"
                    android:clickable="true"

                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
    </ScrollView>

</RelativeLayout>